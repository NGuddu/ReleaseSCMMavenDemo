<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.naiyyar</groupId>
	<artifactId>scmreleasemaven</artifactId>
	<version>1.1-SNAPSHOT</version>
	<properties>
		<project.scm.id>github</project.scm.id>
	</properties>
	<build>
		<extensions>
			<extension>
				<groupId>io.packagecloud.maven.wagon</groupId>
				<artifactId>maven-packagecloud-wagon</artifactId>
				<version>0.0.6</version>
			</extension>
		</extensions>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>3.0.1</version>
			</plugin>
		</plugins>
	</build>
	<scm>
		<developerConnection>
		  scm:git:https://github.com/NGuddu/ReleaseSCMMavenDemo.git
	  </developerConnection>
		<url>https://github.com/NGuddu/ReleaseSCMMavenDemo</url>
	</scm>
	<distributionManagement>
		<repository>
			<id>packagecloud.release</id>
			<url>packagecloud+https://packagecloud.io/NGuddu/release</url>
		</repository>
		<snapshotRepository>
			<id>packagecloud.snapshot</id>
			<url>packagecloud+https://packagecloud.io/NGuddu/snapshot</url>
		</snapshotRepository>
	</distributionManagement>
</project>